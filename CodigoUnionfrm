        }

        private void mnuSalir_Click(object sender, RoutedEventArgs e)
        {
            this.Close();
        }

        private void MenuItem_Click(object sender, RoutedEventArgs e)
        {

        }

        private void mnuAlumno_Click(object sender, RoutedEventArgs e)
        {
            Clases.frmAlumno frm= new Clases.frmAlumno();
            frm.Show();
        }

        private void nmuDocente_Click(object sender, RoutedEventArgs e)
        {
            Clases.frmDocente frm = new Clases.frmDocente();
            frm.Show();
        }

        private void mnuAdministrativo_Click(object sender, RoutedEventArgs e)
        {
            Clases.frmAdministrativo frm = new Clases.frmAdministrativo();
            frm.Show();
        }
